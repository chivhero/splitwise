# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME=your_bot_username
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Cron Job Security
# Generate with: openssl rand -hex 32
# Must be set in Vercel project environment variables.
# Vercel automatically passes this as Authorization: Bearer <CRON_SECRET> to cron routes.
CRON_SECRET=your_random_secret_here

# Tribute Payment Configuration
TRIBUTE_API_KEY=your_tribute_api_key_here
TRIBUTE_PRODUCT_ID=103295
TRIBUTE_PRODUCT_LINK=https://t.me/tribute/app?startapp=pqS3

# Database Configuration (для Vercel используйте Vercel Postgres)
# Локально используется SQLite (data.db)
# На production используйте переменные от Vercel Postgres:
# POSTGRES_URL=
# POSTGRES_PRISMA_URL=
# POSTGRES_URL_NO_SSL=
# POSTGRES_URL_NON_POOLING=
# POSTGRES_USER=
# POSTGRES_HOST=
# POSTGRES_PASSWORD=
# POSTGRES_DATABASE=

# Node Environment
NODE_ENV=development
